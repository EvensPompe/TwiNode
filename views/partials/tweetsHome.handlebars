<div class="row row-cols-1 row-cols-md-2 {{user}}" style="margin-left:0px; margin-right:0px" id="ctnTweetHome">
  {{#each tweets as |tweet key|}}
    <div class="col mb-2 margTop">
      <div class="card text-white bg-dark">
        <div class="card-header">
          {{#if tweet}}
            {{#each tweet}}
              {{#if this.user}}
                {{#each this.user}}
                  <h4 class="card-title">{{this.pseudo}}</h4>
                {{/each}}
              {{/if}}
              {{#if this.date}}
                <p class="card-text"><small class="text-muted">{{fromNow this.date}}</small></p>
              {{/if}}
            {{/each}}
        </div>
        {{#each tweet}}
          {{#if this.imgtweet}}
            <div id="carouselImg{{key}}" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                {{#each this.imgtweet as |img key|}}
                  {{#if (isEqual key 0)}}
                    <div class="carousel-item active">
                      <img src="{{img}}" class="d-block card-img-top w-100" alt="{{img}}">
                    </div>
                  {{else}}
                    <div class="carousel-item">
                      <img src="{{img}}" class="d-block card-img-top w-100" alt="{{img}}">
                    </div>
                  {{/if}}
                {{/each}}
              </div>
              <a class="carousel-control-prev" href="#carouselImg{{key}}" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselImg{{key}}" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          {{/if}}
          {{#if this.videotweet}}
            <div class="card-deck">
              <div class="card">
                {{#each this.videotweet as |video key|}}
                  <video src="{{video}}" class="d-block w-100" controls>
                  </video>
                {{/each}}
              </div>
            </div>
          {{/if}}
          {{#if this.tweet}}
          <div class="card-body tweetId {{this._id}}">
            <p class="card-text">{{this.tweet}}</p>
          </div>
          {{/if}}
        {{/each}}
        <div class="card-body">
          <span class="far fa-heart fa-2x"></span>
          <div class="likesDiv">
            <p></p>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>

{
  "name": "twinode",
  "version": "1.0.0",
  "description": "Un réseau social similaire à Twitter, utilisant NodeJS et Typescript",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "build": "tsc --outDir dist -w",
    "watch": "concurrently -k -n \"Node,TypeScript\" -p \"[{name}]\" -c \"blue,red\" \"npm:watch-node\" \"npm:watch-ts\"",
    "watch-node": "nodemon ./dist/app.js",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvensPompe/TwiNode.git"
  },
  "author": "Evens Pompe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EvensPompe/TwiNode/issues"
  },
  "homepage": "https://github.com/EvensPompe/TwiNode#readme",
  "dependencies": {
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.11",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.2",
    "socket.io": "^2.3.0",
    "ts-token-generator": "^1.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.38",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-handlebars": "^3.1.0",
    "@types/jest": "^25.1.2",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/mongoose": "^5.7.1",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.7.0",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/socket.io": "^2.1.4",
    "concurrently": "^5.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.5"
  }

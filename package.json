{
  "name": "twinode",
  "version": "1.0.0",
  "description": "Un réseau social similaire à Twitter, utilisant NodeJS et Typescript",
  "main": "app.js",
  "scripts": {
    "build": "tsc --outDir dist -w",
    "watch": "concurrently -k -n \"Node,TypeScript\" -p \"[{name}]\" -c \"blue,red\" \"npm:watch-node\" \"npm:watch-ts\"",
    "watch-node": "nodemon ./dist/app.js",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvensPompe/TwiNode.git"
  },
  "author": "Evens Pompe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EvensPompe/TwiNode/issues"
  },
  "homepage": "https://github.com/EvensPompe/TwiNode#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.26.0",
    "mongoose": "^5.9.15",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "socket.io": "^2.4.0",
    "ts-token-generator": "^1.0.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.39",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-handlebars": "^3.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.21",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.8",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/socket.io": "^2.1.6",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.3"
  }
}
